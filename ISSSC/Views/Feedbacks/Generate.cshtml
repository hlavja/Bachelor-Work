@model ISSSC.Models.Meta.MetaInterval

@{
    ViewBag.Title = "Feedback";
    ViewBag.ActiveMenuItem = "menu-statistics";
}


@{
    ViewBag.Title = "Feedback";
}
<div class="body-content container-fluid text-center">
    <div class="row content">
        <div class="col-sm-2 sidenav">
        </div>
        <div class="col-sm-8 text-left">
            <h2>Generování feedbacků a statistik</h2>
            <div>
                @using (Html.BeginForm())
                {
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="form-group">
                        @Html.LabelFor(m => m.From, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(m => m.From, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(m => m.From, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.To, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(m => m.To, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(m => m.To, "", new { @class = "text-danger" })
                        </div>


                    </div>

                    <div class="col-md-offset-2 col-md-10" style="padding-top: 10px">
                        <input type="submit" value="Zobraz hodiny" formaction="List" />
                        <input type="submit" value="Zobraz tutory" formaction="TutorList" />
                        <input type="submit" value="Generuj feedbacky" formaction="Generate" />
                        <input type="submit" value="Zobraz hodiny za předešlý měsíc" formaction="LastMonthTutors" />
                    </div>

                }

          </div>

            <div class="col-sm-8 text-left" style="padding-top:2%">
                <p>
                    Poznámka: Feedbacky jsou generovány ve formátu .csv, kde je použit jako oddělovač středník.
                </p>
            </div>
            </div>
        <div class="col-sm-2 sidenav">

        </div>
    </div>
</div>
