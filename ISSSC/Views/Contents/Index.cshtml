@model IEnumerable<ISSSC.Models.SscisContent>

@{
    ViewBag.Title = SSCISResources.Resources.NEWS;
}

<h2>Index</h2>

<p>
    @Html.ActionLink(SSCISResources.Resources.CREATE_NEWS, "Create")
</p>
<table class="table">
    <tr>
        <th>
            @SSCISResources.Resources.CREATED
        </th>
        <th>
            @SSCISResources.Resources.EDITED
        </th>
        <th>
            @SSCISResources.Resources.CONTENT
        </th>
        <th>
            @SSCISResources.Resources.AUTHOR
        </th>
        <th>
            @SSCISResources.Resources.EDITED_BY
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Created)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Edited)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TextContent)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IdAuthorNavigation.Login)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IdEditedByNavigation.Login)
        </td>
        <td>
            @Html.ActionLink(SSCISResources.Resources.EDIT, "Edit", new { id=item.Id }) |
            @Html.ActionLink(SSCISResources.Resources.DETAIL, "Details", new { id=item.Id }) |
            @Html.ActionLink(SSCISResources.Resources.DELETE, "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
