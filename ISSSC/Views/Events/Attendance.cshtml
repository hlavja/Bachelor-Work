@model ISSSC.Models.Event

@{
    ViewBag.Title = SSCISResources.Resources.EDIT;
}

<div class="body-content container-fluid text-center">
    <div class="row content">
        <div class="col-sm-2 sidenav">
        </div>

        <div class="col-sm-8 text-left">
            <h2>@SSCISResources.Resources.ATTENDANCE</h2>

            @using (Html.BeginForm("Attendance", "Events"))
            {
                @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4>@SSCISResources.Resources.EVENT</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.Id)
                @Html.HiddenFor(model => model.IdTutor)
                @Html.HiddenFor(model => model.IsAccepted)
                @Html.HiddenFor(model => model.IsCancelled)
                @Html.HiddenFor(model => model.CancelationComment)

                <div class="form-group">
                    @Html.LabelFor(model => model.TimeFrom, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.TimeFrom, SSCISResources.Resources.TIME_FROM, new { htmlAttributes = new { @class = "form-control", @disabled = "true" } })
                        @Html.ValidationMessageFor(model => model.TimeFrom, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.TimeTo, SSCISResources.Resources.TIME_TO, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.TimeTo, new { htmlAttributes = new { @class = "form-control", @disabled = "true" } })
                        @Html.ValidationMessageFor(model => model.TimeTo, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.IdSubject, SSCISResources.Resources.SUBJECT, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownList("SubjectID", null, htmlAttributes: new { @class = "form-control", @disabled = "true" })
                        @Html.ValidationMessageFor(model => model.IdSubject, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Attendance, SSCISResources.Resources.ATTENDANCE, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Attendance, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Attendance, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="@SSCISResources.Resources.SAVE" class="btn btn-default" />
                    </div>
                </div>
            </div>
            }

            <div>
                @Html.ActionLink(SSCISResources.Resources.BACK, "Index")
            </div>
        </div>
        <div class="col-sm-2 sidenav">
        </div>

    </div>
</div>
